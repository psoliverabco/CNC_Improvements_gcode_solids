<Page x:Class="CNC_Improvements_gcode_solids.Pages.DrillPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="DrillPage">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT CONTROL PANEL -->
        <Border Grid.Column="0" Background="#EEE" Padding="10">
            <StackPanel>

                <!-- 1) Select line for drill Z depth -->
                <TextBlock Text="Drill Z Depth Line:" FontWeight="Bold"/>
                <Button x:Name="BtnDrillDepthLine"
                        Content="(none)"
                        Height="22"
                        Margin="0 0 0 10"
                        Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"
                        Click="BtnDrillDepthLine_Click"/>

                <!-- 2) Select the lines for holes -->
                <TextBlock Text="Hole Lines:" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal"
            Margin="0,0,0,0">

                    <Button x:Name="BtnAddHoleLine"
            Content="Start Add"
            Height="22" Width="70"
            Margin="0,0,15,0"
                            FontSize="12"
                FontWeight="Bold"
                            Background="#FF007ACC"
                            Foreground="White"
            Click="BtnAddHoleLine_Click" />

                    <Button x:Name="BtnDelHoleLine"
            Content="Delete"
            Height="22" Width="70"
            Margin="0,0,15,0"
                            FontSize="12"
                FontWeight="Bold"
                            Background="#FFCF2929"
                                     Foreground="White"
            Click="BtnDelHoleLine_Click" />

                    <Button x:Name="BtnResHoleLine"
            Content="Reset"
            Height="22" Width="70"
            Margin="0"
                            FontSize="12"
                FontWeight="Bold"
                            Foreground="White"
                            Background="#FF19CE24"
            Click="BtnResetHoleLine_Click" />
                </StackPanel>



                <ListBox x:Name="LstHoleLines"
                         Margin="0 10 0 10"
                         Height="120"
                         ScrollViewer.VerticalScrollBarVisibility="Visible"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.CanContentScroll="True"/>

                <TextBlock Text="Hole Dia:" FontWeight="Bold" Margin="0 10 0 0"/>
                <TextBox x:Name="TxtHoleDia"
                         Height="22"
                         Text=""
                         Margin="0 0 0 5" Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"/>

                <TextBlock Text="Z Hole Top:" FontWeight="Bold" Margin="0 10 0 0"/>
                <TextBox x:Name="TxtZHoleTop"
                         Height="22"
                         Text=""
                         Margin="0 0 0 5" Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"/>

                <TextBlock Text="Point Angle (deg from CL):"
                           FontWeight="Bold"
                           Margin="0 10 0 0"/>
                <TextBox x:Name="TxtPointAngle"
                         Height="22"
                         Text=""
                         Margin="0 0 0 5" Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"/>

                <TextBlock Text="Chamfer at Hole Top:" FontWeight="Bold" Margin="0 10 0 0"/>
                <TextBox x:Name="TxtChamfer"
                         Height="22"
                         Text=""
                         Margin="0 0 0 5" Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"/>

                <TextBlock Text="Z+ Extension:" FontWeight="Bold" Margin="0 10 0 0"/>
                <TextBox x:Name="TxtZPlusExt"
                         Height="22"
                         Text=""
                         Margin="0 0 0 10" Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"/>

                <TextBlock Text="Coordinate Mode:" FontWeight="Bold" Margin="0 10 0 0"/>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <RadioButton x:Name="RadCartesian"
                                 Content="Cartesian"
                                 GroupName="CoordMode"
                                 Margin="0 0 10 0"/>
                    <RadioButton x:Name="RadPolar"
                                 Content="Polar"
                                 GroupName="CoordMode"/>
                </StackPanel>

                <!-- VIEW BUTTONS SIDE-BY-SIDE -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button x:Name="BtnViewProfile"
                            Content="VIEW DRILL SET"
                            Height="40"
                            
                            Width="115" Margin="0 20 0 0"
                            FontSize="12"
                FontWeight="Bold"
                            Background="#FF007ACC"
                            Foreground="White"
                            Click="BtnViewProfile_Click"/>

                    <Button x:Name="BtnViewAllProfiles"
                            Content="VIEW ALL DRILL SET"
                            Height="40"
                            Width="115"
                            Margin="10 20 0 0"
                            FontSize="12"
                FontWeight="Bold"
                            Background="#FF007ACC"
                            Foreground="White"
                            Click="BtnViewAllDrilling_Click"/>
                </StackPanel>

                <Button x:Name="BtnExportDrill"
                        Content="EXPORT DRILL GEOMETRY"
                        Height="40"
                        Margin="0 20 0 0"
                        FontSize="12"
                FontWeight="Bold"
                        Background="#FF5500"
                        Foreground="White"
                        Click="BtnExportDrill_Click"/>

            </StackPanel>
        </Border>

        <!-- RIGHT SIDE: placeholder / future preview area -->

    </Grid>
</Page>
