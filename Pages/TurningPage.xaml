<Page x:Class="CNC_Improvements_gcode_solids.Pages.TurningPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="TurningPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CNC_Improvements_gcode_solids;component/Themes/UiQuadStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#EEE" Padding="10">
            <StackPanel>

                <TextBlock Text="Start X Line:" FontWeight="Bold" Height="18"/>
                <Button x:Name="BtnStartX"
                        Content="(none)"
                        Height="22"
                        Margin="0 0 0 7"
                        Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"
                        Click="BtnStartX_Click"/>

                <TextBlock Text="Start Z Line:" FontWeight="Bold" Height="18"/>
                <Button x:Name="BtnStartZ"
                        Content="(none)"
                        Height="22"
                        Margin="0 0 0 7"
                        Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"
                        Click="BtnStartZ_Click"/>

                <TextBlock Text="End X Line:" FontWeight="Bold" Height="18"/>
                <Button x:Name="BtnEndX"
                        Content="(none)"
                        Height="22"
                        Margin="0 0 0 7"
                        Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"
                        Click="BtnEndX_Click"/>

                <TextBlock Text="End Z Line:" FontWeight="Bold" Height="18"/>
                <Button x:Name="BtnEndZ"
                        Content="(none)"
                        Height="22"
                        Margin="0 0 0 7"
                        Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"
                        Click="BtnEndZ_Click"/>

                <TextBlock Text="Z Extension:" FontWeight="Bold" Margin="0 20 0 0"/>
                <TextBox x:Name="TxtZExt"
                         Height="22"
                         Text=""
                         Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"
                         TextChanged="TxtZExt_TextChanged"/>

                <TextBlock Text="Nose Rad:" FontWeight="Bold" Margin="0 20 0 0"/>
                <TextBox x:Name="NRad"
                         Height="22"
                         Text=""
                         Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"
                         TextChanged="NRad_TextChanged"/>

                <StackPanel x:Name="QuadHorizontal1"
                            Height="40"
                            Orientation="Horizontal"
                            Margin="20,20,0,0">
                    <Button x:Name="G41" Content="G41 Left" Width="65" Click="G41_click" Background="#FF005CD9"/>
                    <Button x:Name="G40" Content="G40 Off" Width="65" Click="G40_click" Background="#FF005CD9"/>
                    <Button x:Name="G42" Content="G42 Right" Width="65" Click="G42_click" Background="#FF005CD9"/>
                </StackPanel>

                <StackPanel x:Name="QuadVertcal"
                            Height="180"
                            Orientation="Vertical"
                            Margin="0,20,0,0">

                    <StackPanel Height="60" Orientation="Horizontal" Margin="30,0,0,0">
                        <Button x:Name="Quad2" Content="P2" Style="{StaticResource QuadButtonStyle}"
                                Tag="25,0,0,0" Background="#FF19CE24"
                                Click="QuadButton_Click" Margin="5" Height="50" Width="50"/>
                        <Button x:Name="Quad6" Content="P6" Style="{StaticResource QuadButtonStyle}"
                                Tag="25,25,0,0" Background="#FF19CE24"
                                Click="QuadButton_Click" Margin="5" Height="50" Width="50"/>
                        <Button x:Name="Quad1" Content="P1" Style="{StaticResource QuadButtonStyle}"
                                Tag="0,25,0,0" Background="#FF19CE24"
                                Click="QuadButton_Click" Margin="5" Height="50" Width="50"/>
                    </StackPanel>

                    <StackPanel Height="60" Orientation="Horizontal" Margin="30,0,0,0">
                        <Button x:Name="Quad7" Content="P7" Style="{StaticResource QuadButtonStyle}"
                                Tag="25,0,0,25" Background="#FF19CE24"
                                Click="QuadButton_Click" Margin="5" Height="50" Width="50"/>
                        <Button x:Name="Quad9" Content="P9" Style="{StaticResource QuadButtonStyle}"
                                Tag="25" Background="#FF19CE24"
                                Click="QuadButton_Click" Margin="5" Height="50" Width="50"/>
                        <Button x:Name="Quad5" Content="P5" Style="{StaticResource QuadButtonStyle}"
                                Tag="0,25,25,0" Background="#FF19CE24"
                                Click="QuadButton_Click" Margin="5" Height="50" Width="50"/>
                    </StackPanel>

                    <StackPanel Height="60" Orientation="Horizontal" Margin="30,0,0,0">
                        <Button x:Name="Quad3" Content="P3" Style="{StaticResource QuadButtonStyle}"
                                Tag="0,0,0,25" Background="#FF19CE24"
                                Click="QuadButton_Click" Margin="5" Height="50" Width="50"/>
                        <Button x:Name="Quad8" Content="P8" Style="{StaticResource QuadButtonStyle}"
                                Tag="0,0,25,25" Background="#FF19CE24"
                                Click="QuadButton_Click" Margin="5" Height="50" Width="50"/>
                        <Button x:Name="Quad4" Content="P4" Style="{StaticResource QuadButtonStyle}"
                                Tag="0,0,25,0" Background="#FF19CE24"
                                Click="QuadButton_Click" Margin="5" Height="50" Width="50"/>
                    </StackPanel>

                </StackPanel>

                <!-- VIEW BUTTONS SIDE-BY-SIDE -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button x:Name="BtnViewProfile"
                            Content="VIEW PROFILE"
                            Height="30"
                            Width="115"
                            Margin="0,0,5,0"
                            FontSize="12"
                FontWeight="Bold"
                            Background="#FF007ACC"
                            Foreground="White"
                            Click="BtnViewProfile_Click"/>

                    <Button x:Name="BtnViewAllProfiles"
                            Content="VIEW ALL"
                            Height="30"
                            Width="115"
                            FontSize="12"
                FontWeight="Bold"
                            Background="#FF007ACC"
                            Foreground="White"
                            Click="BtnViewAllProfiles_Click"/>
                </StackPanel>
                
                <Button x:Name="BtnTurnEditor"
                        Content="TURN EDITOR"
                        Height="30"
                        Margin="0 10 0 0"
                        FontSize="12"
                        FontWeight="Bold"
                        Background="Purple"
                        Foreground="White"
                        Click="BtnTurnEditor_Click"/>
                
                <Button x:Name="BtnExport"
                        Content="EXPORT GEOMETRY"
                        Height="35"
                        Margin="0 10 0 0"
                        FontSize="12"
                FontWeight="Bold"
                        Background="#FF5500"
                        Foreground="White"
                        Click="BtnExport_Click"/>

            </StackPanel>
        </Border>

    </Grid>
</Page>
