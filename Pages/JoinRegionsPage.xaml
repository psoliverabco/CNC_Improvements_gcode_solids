<Page x:Class="CNC_Improvements_gcode_solids.Pages.JoinRegionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="JoinRegionsPage">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL (same style as MillPage) -->
        <Border Grid.Column="0" Background="#EEE" Padding="10">
            <StackPanel>

                <!-- Page label -->
                <TextBlock Text="JOIN REGIONS"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,10"/>

                <!-- Region list -->
                <TextBlock Text="Region List (Turn or Mill):" FontWeight="Bold"/>
                <Border Background="Navy" Padding="2" Margin="0,4,0,10">
                    <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="LstRegions"
                                 Background="Navy"
                                 Foreground="White"
                                 BorderThickness="0"
                                 FontSize="12"
                                 FontWeight="Bold"
                                 SelectionMode="Single"/>
                    </ScrollViewer>
                </Border>

                <!-- Load A/B -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="BtnLoadA"
                            Content="LOAD A"
                            Height="28"
                            Width="115"
                            Background="#FF007ACC"
                            Foreground="White"
                            FontSize="12"
                            FontWeight="Bold"/>
                    <Button x:Name="BtnLoadB"
                            Content="LOAD B"
                            Height="28"
                            Width="115"
                            Margin="10,0,0,0"
                            Background="#FF007ACC"
                            Foreground="White"
                            FontSize="12"
                            FontWeight="Bold"/>
                </StackPanel>

                <!-- A / B display -->
                <TextBlock Text="A (Fixed):" FontWeight="Bold"/>
                <Border Background="Navy" Padding="6" Margin="0,4,0,8">
                    <TextBlock x:Name="TxtRegionA"
                               Text="(none)"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="Bold"
                               TextWrapping="Wrap"/>
                </Border>

                <TextBlock Text="B (Edit):" FontWeight="Bold"/>
                <Border Background="Navy" Padding="6" Margin="0,4,0,12">
                    <TextBlock x:Name="TxtRegionB"
                               Text="(none)"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="Bold"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Join mode radios -->
                <TextBlock Text="Join Mode:" FontWeight="Bold"/>

                <StackPanel Orientation="Vertical" Margin="0,6,0,0">

                    <RadioButton x:Name="Rb_AStart_BStart"
                                 Content="A START  →  B START"
                                 Margin="22,6,0,0"
                                 GroupName="JoinMode"/>

                    <RadioButton x:Name="Rb_AStart_BEnd"
                                 Content="A START  →  B END"
                                 Margin="22,6,0,0"
                                 GroupName="JoinMode"/>

                    <RadioButton x:Name="Rb_AEnd_BStart"
                                 Content="A END    →  B START"
                                 Margin="22,6,0,0"
                                 GroupName="JoinMode"
                                 IsChecked="True"/>

                    <RadioButton x:Name="Rb_AEnd_BEnd"
                                 Content="A END    →  B END"
                                 Margin="22,6,0,0"
                                 GroupName="JoinMode"/>
                </StackPanel>

                <!-- Execute -->
                <Button x:Name="BtnExecuteJoin"
                        Content="EXECUTE JOIN"
                        Height="40"
                        Margin="0,18,0,0"
                        FontSize="12"
                        FontWeight="Bold"
                        Background="#FF5500"
                        Foreground="White"/>

                <!-- Status -->
                <Border Background="#DDD" Padding="6" Margin="0,10,0,0">
                    <TextBlock x:Name="TxtJoinStatus"
                               Text="(status)"
                               Foreground="Black"
                               FontSize="12"
                               TextWrapping="Wrap"/>
                </Border>

            </StackPanel>
        </Border>

        <!-- RIGHT PANEL (empty for now; MainWindow RHS host will display this page) -->
        <Border Grid.Column="1" Background="Transparent"/>

    </Grid>
</Page>
