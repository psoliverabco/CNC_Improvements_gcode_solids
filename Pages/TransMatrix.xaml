<Page x:Class="CNC_Improvements_gcode_solids.Pages.TransMatrix"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:tmc="clr-namespace:CNC_Improvements_gcode_solids.Pages.TransMatrixCard"
      Title="TransMatrix">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <!-- Match your existing page space pattern -->
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL (260 wide) -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <!-- Border1: buttons -->
                <RowDefinition Height="Auto"/>
                <!-- Border2: names list fixed 150 -->
                <RowDefinition Height="190"/>
                <!-- Border3: card -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- BORDER 1: Buttons -->
            <Border Grid.Row="0" Background="#EEE" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Transformation Matrices"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <StackPanel Orientation="Vertical">


                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="BtnAddMatrix"
                                Content="ADD MATRIX"
                                Height="34" Width="115"
                                Margin="0,0,0,6"
                                     
                                     Background="#FF007ACC"
                Foreground="White"
                FontSize="12"
                FontWeight="Bold"
                                 Click="BtnAddMatrix_Click"/>

                            <Button x:Name="BtnRemoveMatrix"
                                Content="REMOVE MATRIX"
                                Height="34" Width="115"
                                Margin="10,0,0,6"
                                    Background="#FFCF2929"
                                     Foreground="White"
                FontSize="12"
                FontWeight="Bold"
                                 Click="BtnRemoveMatrix_Click"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="BtnCutRegion"
                                Content="CUT REGION"
                                Height="34" Width="115"
                                Margin="0,0,0,6"
                                     Background="#FFCF2929"
                                     Foreground="White"
                FontSize="12"
                FontWeight="Bold"
                                 Click="BtnCutRegion_Click"/>

                            <Button x:Name="BtnPasteRegion"
                                Content="PASTE REGION"
                                Height="34" Width="115"
                                     Background="#FF007ACC"
                Foreground="White"
                FontSize="12"
                FontWeight="Bold"
                                    Margin="10,0,0,6"
                                Click="BtnPasteRegion_Click"/>
                        </StackPanel>


                      

                        
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- BORDER 2: Matrix Names list -->
            <Border Grid.Row="1" Background="#EEE" Padding="10" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="6"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Matrices"
                               FontWeight="Bold"
                               Foreground="#222"/>

                    <ListBox Grid.Row="2"
                             x:Name="LstMatrixNames"
                             ItemsSource="{Binding Matrices}"
                             SelectedItem="{Binding SelectedMatrix, Mode=TwoWay}"
                             DisplayMemberPath="MatrixName"
                             BorderThickness="1"
                             BorderBrush="#33000000"
                             Background="White"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                </Grid>
            </Border>

            <!-- BORDER 3: Card container -->
            <Border Grid.Row="2" Background="#EEE" Padding="10">
                <tmc:MatrixCard x:Name="CardHost"/>
            </Border>

        </Grid>

        <!-- RIGHT PANEL unused for now -->
    </Grid>
</Page>
