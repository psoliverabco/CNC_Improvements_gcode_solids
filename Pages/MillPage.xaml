<Page x:Class="CNC_Improvements_gcode_solids.Pages.MillPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MillPage">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#EEE" Padding="10">
            <StackPanel>

                <TextBlock Text="Z Plane Line:" FontWeight="Bold"/>
                <Button x:Name="BtnPlaneZ" Content="(none)"
                        Height="22" Margin="0 0 0 10"
                        Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold" 
                        Click="BtnPlaneZ_Click"/>

                <TextBlock Text="Start X Line:" FontWeight="Bold"/>
                <Button x:Name="BtnStartX" Content="(none)"
                        Height="22" Margin="0 0 0 10"
                        Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"
                        Click="BtnStartX_Click"/>

                <TextBlock Text="Start Y Line:" FontWeight="Bold"/>
                <Button x:Name="BtnStartY" Content="(none)"
                        Height="22" Margin="0 0 0 10"
                        Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"
                        Click="BtnStartY_Click"/>

                <TextBlock Text="End X Line:" FontWeight="Bold"/>
                <Button x:Name="BtnEndX" Content="(none)"
                        Height="22" Margin="0 0 0 10"
                        Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"
                        Click="BtnEndX_Click"/>

                <TextBlock Text="End Y Line:" FontWeight="Bold"/>
                <Button x:Name="BtnEndY" Content="(none)"
                        Height="22" Margin="0 0 0 20"
                        Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"
                        Click="BtnEndY_Click"/>

                <TextBlock Text="Tool Diameter:" FontWeight="Bold"/>
                <TextBox x:Name="TxtToolDia"
                         Height="22"
                         Margin="0 0 0 10"
                         Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"
                         TextChanged="TxtToolDia_TextChanged"/>

                <TextBlock Text="Tool Length:" FontWeight="Bold"/>
                <TextBox x:Name="TxtToolLen"
                         Height="22"
                         Margin="0 0 0 5"
                         Background="Navy" Foreground="White" FontSize="12" FontWeight="Bold"
                         TextChanged="TxtToolLen_TextChanged"/>
                

                <StackPanel Orientation="Vertical"  Margin="0,13,0,0">
                    <RadioButton x:Name="Fuseall"
                 Content="Fuse All Primatives"
                 Margin="22,8,0,0"
                 GroupName="FuseallGroups"
                 Checked="MillOptionRadio_Changed"
                 Unchecked="MillOptionRadio_Changed"
                 PreviewMouseLeftButtonDown="RadioToggle_PreviewMouseLeftButtonDown"/>
                   
                    <RadioButton x:Name="Clipper"
                 Content="Create Clipper Solid"
                 Margin="22,8,0,0"
                 GroupName="FuseallGroup"
                 Checked="MillOptionRadio_Changed"
                 Unchecked="MillOptionRadio_Changed"
                 PreviewMouseLeftButtonDown="RadioToggle_PreviewMouseLeftButtonDown"/>
                   
                    <RadioButton x:Name="ClipperIsland"
                 Content="Include Clipper Voids"
                 Margin="22,8,0,0"
                 GroupName="ClipperIslands"
                 Checked="MillOptionRadio_Changed"
                 Unchecked="MillOptionRadio_Changed"
                 PreviewMouseLeftButtonDown="RadioToggle_PreviewMouseLeftButtonDown"/>

                    <RadioButton x:Name="RemoveSplitter"
                 Content="Remove Co-planer Faces"
                 Margin="22,8,0,0"
                 GroupName="RemoveSplitterGroup"
                 Checked="MillOptionRadio_Changed"
                 Unchecked="MillOptionRadio_Changed"
                 PreviewMouseLeftButtonDown="RadioToggle_PreviewMouseLeftButtonDown"/>
                    
                    <RadioButton x:Name="GuidedTool"
                 Content="Guided Tool"
                 Margin="22,8,0,0"
                 GroupName="wiregroup"
                 Checked="MillOptionRadio_Changed"
                 Unchecked="MillOptionRadio_Changed"
                 PreviewMouseLeftButtonDown="RadioToggle_PreviewMouseLeftButtonDown"/>


                    <RadioButton x:Name="ClosedWire"
                 Content="Closed CL Wire"
                 Margin="22,8,0,0"
                 GroupName="wiregroup"
                 Checked="MillOptionRadio_Changed"
                 Unchecked="MillOptionRadio_Changed"
                 PreviewMouseLeftButtonDown="RadioToggle_PreviewMouseLeftButtonDown"/>

                  
                    <RadioButton x:Name="ClosedInner"
                 Content="Closed Wire Pocket"
                 Margin="22,8,0,0"
                 GroupName="wireinoutgroup"
                 Checked="MillOptionRadio_Changed"
                 Unchecked="MillOptionRadio_Changed"
                 PreviewMouseLeftButtonDown="RadioToggle_PreviewMouseLeftButtonDown"/>

                    <RadioButton x:Name="ClosedOuter"
                 Content="Closed Wire Mill Outer"
                 Margin="22,8,0,0"
                 GroupName="wireinoutgroup"
                 Checked="MillOptionRadio_Changed"
                 Unchecked="MillOptionRadio_Changed"
                 PreviewMouseLeftButtonDown="RadioToggle_PreviewMouseLeftButtonDown"/>


                </StackPanel>




                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Button x:Name="BtnViewProfile"
                            Content="VIEW MILLING"
                            Height="40"
                            Width="115"
                            Margin="0 20 0 0"
                            Background="#FF007ACC"
                            Foreground="White"
                            FontSize="12"
                FontWeight="Bold"
                            Click="BtnViewMilling_Click"/>

                    <Button x:Name="BtnViewAllProfiles"
                            Content="VIEW ALL MILLING"
                            Height="40"
                            Width="115"
                            Margin="10 20 0 0"
                            FontSize="12"
                            FontWeight="Bold"
                            Background="#FF007ACC"
                            Foreground="White"
                            Click="BtnViewAllMilling_Click"/>
                </StackPanel>

                <Button x:Name="BtnExport"
                        Content="EXPORT MILL GEOMETRY"
                        Height="40" Margin="0 20 0 0"
                        FontSize="12"
                FontWeight="Bold"
                        Background="#FF5500" Foreground="White"
                        Click="BtnExport_Click"/>
                           </StackPanel>
        </Border>

    </Grid>
</Page>
