<UserControl x:Class="CNC_Improvements_gcode_solids.Pages.TransMatrixCard.MatrixCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utils="clr-namespace:CNC_Improvements_gcode_solids.Utilities"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="260"
             d:DesignWidth="240"
             Background="Transparent">

    <Border CornerRadius="6"
            BorderThickness="1"
            BorderBrush="#66000000"
            Background="#FFF7F7F7"
            Padding="10">

        <StackPanel>

            <TextBlock Text="Transform"
                       FontWeight="Bold"
                       FontSize="14"
                       Foreground="#222"
                       Margin="0,0,0,8"/>

            <!-- Name -->
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Name"
                           VerticalAlignment="Center"
                           Foreground="#333"
                           Margin="0,0,8,0"/>

                <TextBox Grid.Column="1"
                         Height="26"
                         VerticalContentAlignment="Center"
                         Text="{Binding MatrixName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="{Binding IsLocked}"/>
            </Grid>

            <!-- Numeric fields -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="RotZ°" Foreground="#333" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="0" Grid.Column="1" Height="26" VerticalContentAlignment="Center"
                           Text="{Binding RotZ, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsReadOnly="{Binding IsLocked}"
                           PreviewTextInput="NumericTextBox_PreviewTextInput"
                           DataObject.Pasting="NumericTextBox_Pasting"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="RotY°" Foreground="#333" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="2" Grid.Column="1" Height="26" VerticalContentAlignment="Center"
                           Text="{Binding RotY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsReadOnly="{Binding IsLocked}"
                           PreviewTextInput="NumericTextBox_PreviewTextInput"
                           DataObject.Pasting="NumericTextBox_Pasting"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Tx" Foreground="#333" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="4" Grid.Column="1" Height="26" VerticalContentAlignment="Center"
                           Text="{Binding Tx, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsReadOnly="{Binding IsLocked}"
                           PreviewTextInput="NumericTextBox_PreviewTextInput"
                           DataObject.Pasting="NumericTextBox_Pasting"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="Ty" Foreground="#333" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="6" Grid.Column="1" Height="26" VerticalContentAlignment="Center"
                           Text="{Binding Ty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsReadOnly="{Binding IsLocked}"
                           PreviewTextInput="NumericTextBox_PreviewTextInput"
                           DataObject.Pasting="NumericTextBox_Pasting"/>

                <TextBlock Grid.Row="8" Grid.Column="0" Text="Tz" Foreground="#333" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="8" Grid.Column="1" Height="26" VerticalContentAlignment="Center"
                           Text="{Binding Tz, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           IsReadOnly="{Binding IsLocked}"
                           PreviewTextInput="NumericTextBox_PreviewTextInput"
                           DataObject.Pasting="NumericTextBox_Pasting"/>
            </Grid>

            <TextBlock Text="Regions"
                       FontWeight="Bold"
                       Foreground="#222"
                       Margin="0,0,0,6"/>

            <Border BorderThickness="1"
                    BorderBrush="#33000000"
                    Background="White"
                    CornerRadius="4"
                    Padding="6">

                <ListView ItemsSource="{Binding Regions}"
                          SelectedItem="{Binding SelectedRegion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          SelectionMode="Extended"
                          utils:ListViewSelectedItemsBehavior.SelectedItems="{Binding SelectedRegions}"
                          Height="80"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="#222"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Border>

        </StackPanel>
    </Border>
</UserControl>
