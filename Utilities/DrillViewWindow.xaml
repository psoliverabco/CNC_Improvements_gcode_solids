<Window x:Class="CNC_Improvements_gcode_solids.Utilities.DrillViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drill Viewer"
        Width="1200"
        Height="700"
        WindowStartupLocation="CenterOwner"
        Background="#222">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP TOOLBAR (not in either graphic canvas) -->
        <Border Grid.Row="0" Background="#111" CornerRadius="6" BorderBrush="#444" BorderThickness="1" Padding="3" Margin="0,0,0,8">
            <DockPanel LastChildFill="True">
                <TextBlock x:Name="TxtSummary"
                           Foreground="#DDD"
                           FontFamily="Consolas"
                           FontSize="12"
                           VerticalAlignment="Center"
                           Text="(drill summary)"/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Fit All" Padding="4,3" Margin="3,0,0,0" Click="BtnFitAll_Click"/>
                    <Button Content="Reset Zoom" Padding="4,3" Margin="3,0,0,0" Click="BtnResetAll_Click"/>

                    <Separator Width="5" Opacity="0"/>

                    <Button Content="Fit Pattern" Padding="4,3" Margin="3,0,0,0" Click="BtnFitTop_Click"/>
                    <Button Content="Reset Hole Zoom" Padding="4,3" Margin="3,0,0,0" Click="BtnResetTop_Click"/>

                    <Separator Width="5" Opacity="0"/>

                    <Button Content="Fit Shape" Padding="4,3" Margin="3,0,0,0" Click="BtnFitSection_Click"/>
                    <Button Content="Reset Shape Zoom" Padding="4,3" Margin="3,0,0,0" Click="BtnResetSection_Click"/>

                    <Separator Width="5" Opacity="0"/>

                    <Button x:Name="BtnToggleChamfer" Content="Chamfer: ON" Padding="4,3" Margin="3,0,0,0" Click="BtnToggleChamfer_Click"/>
                    <Button x:Name="BtnToggleLabels" Content="Labels: ON" Padding="4,3" Margin="3,0,0,0" Click="BtnToggleLabels_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- TWO SEPARATE GRAPHIC PANELS SIDE BY SIDE -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: HOLE PATTERN PANEL -->
            <Border Grid.Column="0"
                    Background="#111"
                    CornerRadius="6"
                    BorderBrush="#444"
                    BorderThickness="1"
                    ClipToBounds="True">
                <DockPanel>
                    <TextBlock x:Name="LHLable" DockPanel.Dock="Top"
                               Text="HOLE PATTERN (XY)"
                               Foreground="#CCC"
                               FontWeight="SemiBold"
                               Margin="10,8,10,6"/>

                    <!-- layer: drawing canvas (zoomed) + overlay (not zoomed) -->
                    <Grid ClipToBounds="True">
                        <Canvas x:Name="TopCanvas"
                                Background="#0D0D0D"
                                Focusable="True"
                                ClipToBounds="True"
                                MouseLeftButtonDown="TopCanvas_MouseLeftButtonDown"
                                MouseWheel="TopCanvas_MouseWheel"/>

                        <Border x:Name="TopInfoBorder"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Margin="10"
                                Padding="8,6"
                                CornerRadius="4"
                                Background="#AA000000"
                                BorderBrush="#555"
                                BorderThickness="1"
                                IsHitTestVisible="False">
                            <TextBlock x:Name="TopInfoText"
                                       Foreground="#E6E6E6"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       Text="[[[[[[[[[[[[[[[[" />
                        </Border>
                    </Grid>
                </DockPanel>
            </Border>

            <GridSplitter Grid.Column="1"
                          Width="6"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="#333"
                          ShowsPreview="True"/>

            <!-- RIGHT: SECTION PANEL -->
            <Border Grid.Column="2"
                    Background="#111"
                    CornerRadius="6"
                    BorderBrush="#444"
                    BorderThickness="1"
                    ClipToBounds="True">
                <DockPanel>
                    <TextBlock x:Name="TopInfo" DockPanel.Dock="Top"
                               Text="HOLE SECTION (R vs Z)"
                               Foreground="#CCC"
                               FontWeight="SemiBold"
                               Margin="10,8,10,6"/>

                    <!-- layer: drawing canvas (zoomed) + overlay (not zoomed) -->
                    <Grid ClipToBounds="True">
                        <Canvas x:Name="SectionCanvas"
                                Background="#0D0D0D"
                                Focusable="True"
                                ClipToBounds="True"
                                MouseLeftButtonDown="SectionCanvas_MouseLeftButtonDown"
                                MouseWheel="SectionCanvas_MouseWheel"/>

                        <Border x:Name="SectionInfoBorder"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Margin="10"
                                Padding="8,6"
                                CornerRadius="4"
                                Background="#AA000000"
                                BorderBrush="#555"
                                BorderThickness="1"
                                IsHitTestVisible="False">
                            <TextBlock x:Name="SectionInfoText"
                                       Foreground="#E6E6E6"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                        Width="120"
                                       Text=""/>
                        </Border>
                    </Grid>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
