<Window x:Class="CNC_Improvements_gcode_solids.Utilities.TurnViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Turning Profile Viewer"
        Width="1200"
        Height="700"
        WindowStartupLocation="CenterOwner"
        Background="#222">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP TOOLBAR -->
        <Border Grid.Row="0"
                Background="#111"
                CornerRadius="6"
                BorderBrush="#444"
                BorderThickness="1"
                Padding="8"
                Margin="0,0,0,8">
            <DockPanel LastChildFill="True">
                

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="TxtSummary"
                           
                           FontFamily="Consolas"
                           FontSize="12"
                           VerticalAlignment="Center"
                           Text="(turning summary)"/>
                    <Button  x:Name="Fit" Content="Fit" Margin="20,0,20,0" Padding=" 20,0,20,0" PreviewMouseDown="BtnFit_down_click"/>
                    <Label x:Name="t111" Content="          |   Profile color" Foreground="#CCC" FontWeight="SemiBold"/>
                    <Rectangle x:Name="Original"  Stroke="Black" Width="100" Fill="Black" />
                    <Label x:Name="t222" Content="Offset color" Foreground="#CCC" FontWeight="SemiBold"/>
                    <Rectangle x:Name="Offset" Stroke="Black" Width="100" Fill="Black"/>
                    <Label x:Name="t333" Content="Closing color" Foreground="#CCC" FontWeight="SemiBold"/>
                    <Rectangle x:Name="Closing" Stroke="Black" Width="100" Fill="Black"/>
                </StackPanel>




               
            </DockPanel>
        </Border>

        <!-- VIEW PANEL -->
        <Border Grid.Row="1"
                Background="#111"
                CornerRadius="6"
                BorderBrush="#444"
                BorderThickness="1"
                ClipToBounds="True">

            <DockPanel LastChildFill="True">

                <TextBlock x:Name="Desc" DockPanel.Dock="Top"
                           Text="TURNING PROFILE (R vs Z)"
                           Foreground="#CCC"
                           FontWeight="SemiBold"
                           Margin="10,8,10,6"/>

                <Grid ClipToBounds="True">
                    <!-- Canvas (zoomed) -->
                    <Canvas x:Name="ProfileCanvas"
                            Background="#0D0D0D"
                            Focusable="True"
                            ClipToBounds="True"
                            MouseLeftButtonDown="ProfileCanvas_MouseLeftButtonDown"
                            MouseWheel="ProfileCanvas_MouseWheel"/>

                    <!-- Bottom-left info panel (NOT zoomed) -->
                    <Border Background="#99000000"
                            BorderBrush="#666"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="8"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Margin="10"
                            IsHitTestVisible="False">
                        <TextBlock x:Name="InfoText"
                                   Foreground="Yellow"
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Width="120"
                                   Text="(info)"/>
                    </Border>
                </Grid>

            </DockPanel>
        </Border>
    </Grid>
</Window>
