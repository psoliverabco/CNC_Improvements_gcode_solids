<Window x:Class="CNC_Improvements_gcode_solids.Utilities.MillViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mill Viewer"
        Width="1200"
        Height="700"
        WindowStartupLocation="CenterOwner"
        Background="#222">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP TOOLBAR (not in the graphic canvas) -->
        <Border Grid.Row="0"
                Background="#111"
                CornerRadius="6"
                BorderBrush="#444"
                BorderThickness="1"
                Padding="8"
                Margin="0,0,0,8">
            <DockPanel LastChildFill="True">
                <TextBlock x:Name="TxtSummary"
                           
                           FontFamily="Consolas"
                           FontSize="12"
                           VerticalAlignment="Center"
                           Text="(mill summary)"/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Fit" Padding="10,3" Margin="6,0,0,0" Click="BtnFit_Click"/>
                    <Button Content="Reset Zoom" Padding="10,3" Margin="6,0,0,0" Click="BtnReset_Click"/>

                    <Separator Width="10" Opacity="0"/>
                    <Button x:Name="BtnToggleCL" Content="CL: OFF" Padding="10,3" Margin="6,0,0,0" Click="BtnToggleCL_Click"/>

                    <Button x:Name="BtnToggleLabels" Content="Labels: ON" Padding="10,3" Margin="6,0,0,0" Click="BtnToggleLabels_Click"/>

                     <Button x:Name="BtnRawD" Content="Display" Padding="10,3" Margin="6,0,0,0" Click="BtnRawDispaly_Click"/>
                    <Button x:Name="BtnPreClipperD" Content="Pre Clipper Display" Padding="10,3" Margin="6,0,0,0" Click="BtnPreClipperDispaly_Click"/>
                    <Button x:Name="BtnClipperD" Content="Clipper Display" Padding="10,3" Margin="6,0,0,0" Click="BtnClipperDispaly_Click"/>
                    <Button x:Name="BtnCandigateD" Content="Candigate" Padding="10,3" Margin="6,0,0,0" Click="BtnCandigate_Click"/>
                    <Button x:Name="BtnTrueD" Content="Final Solid" Padding="10,3" Margin="6,0,0,0" Click="BtnTrueShape_Click"/>


                </StackPanel>
            </DockPanel>
        </Border>

        <!-- SINGLE TOP VIEW -->
        <Border Grid.Row="1"
                Background="#111"
                CornerRadius="6"
                BorderBrush="#444"
                BorderThickness="1"
                ClipToBounds="True">
            <Grid ClipToBounds="True">

                <!-- Canvas is clipped by the Border/Grid so zoom cannot cover UI -->
                <Canvas x:Name="TopCanvas"
                        Background="#0D0D0D"
                        Focusable="True"
                        ClipToBounds="True"
                        MouseLeftButtonDown="TopCanvas_MouseLeftButtonDown"
                        MouseWheel="TopCanvas_MouseWheel"/>

                <!-- Bottom-left info panel (NOT zoomed) -->
                <Border Background="#99000000"
                        BorderBrush="#666"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="8"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Margin="10"
                        IsHitTestVisible="False">
                    <TextBlock x:Name="InfoText"
                               Foreground="Yellow"
                               FontFamily="Consolas"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Width="120"
                               Text="(info)"/>
                </Border>

            </Grid>
        </Border>
    </Grid>
</Window>
