<Window x:Class="CNC_Improvements_gcode_solids.Utilities.DrillViewWindowV2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drill Viewer (V2)"
        Width="1200"
        Height="700"
        WindowStartupLocation="CenterOwner"
        Background="#222">

    <Window.Resources>

        <!-- Single source of truth for ALL text colour in this window -->
        <SolidColorBrush x:Key="GraphicTextBrush" Color="Yellow"/>

        <!-- Default text colour for common text controls -->
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{DynamicResource GraphicTextBrush}"/>
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Foreground" Value="{DynamicResource GraphicTextBrush}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource GraphicTextBrush}"/>
        </Style>

        <Style TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="{DynamicResource GraphicTextBrush}"/>
        </Style>

        

    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP TOOLBAR -->
        <Border Grid.Row="0"
                Background="#111"
                CornerRadius="6"
                BorderBrush="#444"
                BorderThickness="1"
                Padding="8"
                Margin="0,0,0,8">
            <DockPanel LastChildFill="True">
                <TextBlock x:Name="TxtSummary"
                           FontFamily="Consolas"
                           FontSize="12"
                           VerticalAlignment="Center"
                           Text="(drill summary)"/>

                <StackPanel DockPanel.Dock="Right"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <Button Content="Fit All" Padding="10,3" Margin="6,0,0,0" Click="BtnFitAll_Click"/>
                    <Button Content="Reset All Zoom" Padding="10,3" Margin="6,0,0,0" Click="BtnResetAll_Click"/>

                    <Separator Width="10" Opacity="0"/>

                    <Button Content="Fit Pattern" Padding="10,3" Margin="6,0,0,0" Click="BtnFitTop_Click"/>
                    <Button Content="Reset Pattern Zoom" Padding="10,3" Margin="6,0,0,0" Click="BtnResetTop_Click"/>

                    <Separator Width="10" Opacity="0"/>

                    <Button Content="Fit Sections" Padding="10,3" Margin="6,0,0,0" Click="BtnFitSections_Click"/>
                    <Button Content="Reset Sections Zoom" Padding="10,3" Margin="6,0,0,0" Click="BtnResetSections_Click"/>

                    <Separator Width="10" Opacity="0"/>

                    <Button x:Name="BtnToggleChamfer" Content="Chamfer: ON" Padding="10,3" Margin="6,0,0,0" Click="BtnToggleChamfer_Click"/>
                    <Button x:Name="BtnToggleLabels" Content="Labels: ON" Padding="10,3" Margin="6,0,0,0" Click="BtnToggleLabels_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- TWO PANELS SIDE BY SIDE -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: HOLE PATTERN -->
            <Border Grid.Column="0"
                    Background="#111"
                    CornerRadius="6"
                    BorderBrush="#444"
                    BorderThickness="1"
                    ClipToBounds="True">
                <DockPanel>
                    <TextBlock x:Name="Toptext"
                               DockPanel.Dock="Top"
                               Text="HOLE PATTERN (XY)"
                               FontWeight="SemiBold"
                               Margin="10,8,10,6"/>

                    <Grid ClipToBounds="True">
                        <Canvas x:Name="TopCanvas"
                                Background="#0D0D0D"
                                Focusable="True"
                                ClipToBounds="True"
                                MouseLeftButtonDown="TopCanvas_MouseLeftButtonDown"
                                MouseWheel="TopCanvas_MouseWheel"/>

                        <Border x:Name="TopInfoBorder"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Margin="10"
                                Padding="8,6"
                                CornerRadius="4"
                                Background="#AA000000"
                                BorderBrush="#555"
                                BorderThickness="1"
                                IsHitTestVisible="False">
                            <TextBlock x:Name="TopInfoText"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       Text=""/>
                        </Border>
                    </Grid>
                </DockPanel>
            </Border>

            <GridSplitter Grid.Column="1"
                          Width="6"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="#333"
                          ShowsPreview="True"/>

            <!-- RIGHT: STACKED SECTIONS (SCROLL) -->
            <Border Grid.Column="2"
                    Background="#111"
                    CornerRadius="6"
                    BorderBrush="#444"
                    BorderThickness="1"
                    ClipToBounds="True">
                <DockPanel>
                    <TextBlock x:Name="Toptext2"
                               DockPanel.Dock="Top"
                               Text="HOLE SECTIONS (R vs Z) — ONE PER GROUP"
                               FontWeight="SemiBold"
                               Margin="10,8,10,6"/>

                    <Grid ClipToBounds="True">
                        <!-- IMPORTANT:
                             Mouse wheel scrolls normally.
                             Ctrl+Wheel zooms the whole section stack. -->
                        <ScrollViewer x:Name="SectionsScroll"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      PreviewMouseWheel="SectionsScroll_PreviewMouseWheel"
                                      Background="#0D0D0D">

                            <!-- This root gets the zoom transform -->
                            <Grid x:Name="SectionZoomRoot"
                                  Background="#0D0D0D">
                                <ItemsControl x:Name="SectionItems">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="10,8,10,8"
                                                    Background="#111"
                                                    CornerRadius="6"
                                                    BorderBrush="#444"
                                                    BorderThickness="1"
                                                    Padding="8">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding HeaderText}"
                                                               Foreground="{Binding HeaderForeground}"
                                                               FontFamily="Consolas"
                                                               FontSize="12"
                                                               Margin="0,0,0,6"/>

                                                    <Canvas Background="#0D0D0D"
                                                            Height="{Binding CanvasHeight}"
                                                            Focusable="False"
                                                            ClipToBounds="True"
                                                            Loaded="SectionItemCanvas_Loaded"
                                                            SizeChanged="SectionItemCanvas_SizeChanged"
                                                            Tag="{Binding}"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </ScrollViewer>

                        <Border x:Name="SectionInfoBorder"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Margin="10"
                                Padding="8,6"
                                CornerRadius="4"
                                Background="#AA000000"
                                BorderBrush="#555"
                                BorderThickness="1"
                                IsHitTestVisible="False">
                            <TextBlock x:Name="SectionInfoText"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       Text="Ctrl+Wheel = Zoom sections. Wheel = Scroll."/>
                        </Border>
                    </Grid>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
